{
  "version": 2,
  "builds": [
    {
      "src": "server.ts",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "npm run build",
        "outputDirectory": "dist"
      }
    }
  ],
  "rewrites": [
    { "source": "/socket.io/(.*)", "destination": "/server.ts" },
    { "source": "/(.*)", "destination": "/$1" }
  ]
} 